#ifndef Rook_h
#define Rook_h

#include <map>
#include <string>
#include "ChessPiece.h"

class Rook: public ChessPiece{
    
public:
    Rook(bool _white);
    virtual ~Rook();
    virtual bool validmove(string s_sq, string d_sq, map<string,ChessPiece*>* chessboard);
    virtual string name();
    
    
    
    
};
#endif /* Rook_h */
